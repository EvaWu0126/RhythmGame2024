<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndScreen">

    <TextView
        android:id="@+id/textView_endScreen_rating"
        android:layout_width="184dp"
        android:layout_height="165dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/clicker_script"
        android:text="SS"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFC107"
        android:textSize="135sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_endScreen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="80dp"
        android:text="Song Name"
        app:layout_constraintStart_toEndOf="@+id/textView_endScreen_rating"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_endScreen_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="47dp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="240189"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView_endScreen_rating"
        app:layout_constraintTop_toBottomOf="@+id/textView_endScreen_name" />

    <TextView
        android:id="@+id/textView_endScreen_maxCombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="48dp"
        android:text="Max Combo: 189/210"
        app:layout_constraintStart_toEndOf="@+id/textView_endScreen_rating"
        app:layout_constraintTop_toBottomOf="@+id/textView_endScreen_score" />

    <Button
        android:id="@+id/button_endScreen_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="76dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_endScreen_rating"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_endScreen_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="40dp"
        android:text="Retry"
        app:layout_constraintStart_toEndOf="@+id/button_endScreen_back"
        app:layout_constraintTop_toBottomOf="@+id/textView_endScreen_maxCombo" />
</androidx.constraintlayout.widget.ConstraintLayout>